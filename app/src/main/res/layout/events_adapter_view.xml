<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorGrey"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:color/holo_blue_dark"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp" />
<TextView
    android:id="@+id/event_title_name_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Title"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    android:layout_marginStart="24dp"
    android:layout_marginLeft="12dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/event_image"
    app:layout_constraintVertical_bias="0.375" />
    <TextView
        android:id="@+id/event_subtitle_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubTitle"
        app:layout_constraintLeft_toRightOf="@+id/event_image"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/event_image"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textViewDauer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/imageViewRad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_name_bike"
        app:layout_constraintRight_toLeftOf="@+id/textViewDauer"
        android:layout_marginRight="17dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDauer"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.321" />

    <ImageView
        android:id="@+id/imageViewBahn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_name_train"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRad"
        app:layout_constraintRight_toLeftOf="@+id/textViewDauer"
        android:layout_marginRight="17dp" />

    <ImageView
        android:id="@+id/imageViewChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_name_checked"
        app:layout_constraintLeft_toRightOf="@+id/event_image"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/event_subtitle_textview" />

</android.support.constraint.ConstraintLayout>